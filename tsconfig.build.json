{
    "compilerOptions": {
      "target": "ES2020",
      "lib": ["ES2020", "DOM"],
      "module": "ESNext",
      "moduleResolution": "Bundler",
      "jsx": "react-jsx",
  
      "strict": true,
      "skipLibCheck": true,
  
      "declaration": true,
      "declarationMap": false,
      "emitDeclarationOnly": false,
  
      "isolatedModules": true,
      "types": ["react", "react-dom"]
    },
    "include": ["src/lib/**/*"],
    "exclude": ["src/demo/**", "dist/**", "node_modules/**", "vite.config.*"]
  }
  